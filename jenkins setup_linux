************************** MAVEN INSTALLATION **************************************************
sudo -i
mkdir /opt/apachemaven
cd /opt/apachemaven
wget http://mirrors.wuchna.com/apachemirror/maven/maven-3/3.5.4/binaries/apache-maven-3.5.4-bin.tar.gz
ln -s apache-maven-3.5.4 maven

vi /etc/environment
JAVA_HOME="/usr/lib/jvm/jre-1.8.0-openjdk.x86_64"
M2_HOME="/opt/apachemaven/maven"

update-alternatives --install "/usr/bin/mvn" "mvn" "/opt/apachemaven/maven/bin/mvn" 0
update-alternatives --set mvn /opt/apachemaven/maven/bin/mvn
mvn --version
**************************************************************************************************

